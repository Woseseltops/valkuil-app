<Input_screen>:

    ok_button: ok

    canvas.before:
        Color:
            rgba: 0.808, 0.812, 0.691, 1
        Rectangle:
            pos: self.pos
            size: self.size

    TextInput:
        size: [root.width-20,root.height/2]
        center: root.center
        y: root.height - self.height - 10
        font_size: 25

    Button:
        id: ok
        y: root.height / 2 - 50
        text: 'Controleer'
        x: root.center_x - (self.width/2)
        height: 20
        size: [200,30]
        font_size: 30

    Image:
        source: 'valkuil_logo.png'
        size: (500,500)
        y: -150
        x: root.center_x - (self.width/2)

<Output_screen>

    canvas.before:
        Color:
            rgba: 0.808, 0.812, 0.691, 1
        Rectangle:
            pos: self.pos
            size: self.size