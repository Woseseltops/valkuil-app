<Input_screen>:

    ok_button: ok

    canvas.before:
        Color:
            rgba: 0.808, 0.812, 0.691, 1
        Rectangle:
            pos: self.pos
            size: self.size

    TextInput:
        size: [root.width-100,root.height/2]
        y: 50
        x: root.center_x - (self.width/2)

    Button:
        id: ok
        y: 10
        text: 'Controleer'
        x: root.center_x - (self.width/2)
        height: 20

    Image:
        source: 'valkuil_logo.png'
        center: root.center
        size: (500,500)
        y: root.height - 350