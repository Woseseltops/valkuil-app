

<Input_screen>:

    ok_button: ok

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 5

        canvas:
            Color:
                rgba: 0.808, 0.812, 0.691, 1
            Rectangle:
                pos: self.pos
                size: self.size

        TextInput:
            font_size: 25

            size_hint: 1,3

        Button:
            id: ok
            text: 'Controleer'
            font_size: 30
            on_press: root.manager.current = 'output'
            size_hint: 1,0.4

        Image:
            source: 'valkuil_logo.png'

<Output_screen>

    mistake_box: mistake_box
    correction_box: correction_box

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        canvas:
            Color:
                rgba: 0.808, 0.812, 0.691, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            id: back
            text: '<'
            font_size: 100
            on_press: root.previous_error()

        Label:
            id: mistake_box
            canvas:
                Color:
                    rgba: 1, 0.875, 0.875, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            text: 'Fout'
            textcolor: [0.968, 0.302, 0.302]

            Label:
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                font_size: 25
                markup: True
                color: self.parent.textcolor
                text: self.parent.text

        Label:
            id: correction_box
            canvas:
                Color:
                    rgba: .615, 0.937, 0.732, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            text: 'Verbetering'
            textcolor: [0, 0, 0]

            Label:
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                font_size: 25
                markup: True
                color: self.parent.textcolor
                text: self.parent.text

        Button:
            id: forward
            text: '>'
            font_size: 100
            on_press: root.next_error()