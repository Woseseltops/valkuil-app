<Input_screen>:

    ok_button: ok

    GridLayout:
        canvas:
            Color:
                rgba: 0.808, 0.812, 0.691, 1
            Rectangle:
                pos: self.pos
                size: self.size

        TextInput:
            size: [root.width-20,root.height/2]
            center: root.center
            y: root.height - self.height - 10
            font_size: 25

        Button:
            id: ok
            y: root.height / 2 - 50
            text: 'Controleer'
            size: [200,30]
            x: root.center_x - (self.width/2)
            font_size: 30
            on_press: root.manager.current = 'output'

        Image:
            source: 'valkuil_logo.png'
            size: (500,500)
            y: -150
            x: root.center_x - (self.width/2)

<Output_screen>

    mistake_box: mistake_box
    correction_box: correction_box

    GridLayout:
        canvas:
            Color:
                rgba: 0.808, 0.812, 0.691, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            id: back
            text: '<'
            center_x: root.center_x
            font_size: 100
            y: root.height - 10 - self.height
            on_press: root.previous_error()

        Label:
            id: mistake_box
            mistake_text: mistake_text
            canvas:
                Color:
                    rgba: 1, 0.875, 0.875, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            size: [root.width-(root.width/10),root.height/10]
            center_x: root.center_x
            y: root.center_y + self.height/2

            Label:
                id: mistake_text
                center_x: root.center_x
                center_y: root.center_y + self.height/2
                font_size: 25
                text: 'Fout'

        Label:
            id: correction_box
            correction_text: correction_text
            canvas:
                Color:
                    rgba: .615, 0.937, 0.732, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            size: [root.width-(root.width/10),root.height/10]
            center_x: root.center_x
            y: root.center_y - self.height/2

            Label:
                id: correction_text
                center_x: root.center_x
                center_y: root.center_y
                font_size: 25
                text: 'Verbetering'

        Button:
            id: forward
            text: '>'
            center_x: root.center_x
            y: 10
            font_size: 100
            on_press: root.next_error()